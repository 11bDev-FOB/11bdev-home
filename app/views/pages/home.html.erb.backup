<!-- Hero Section -->
<section class="bg-vintage-cream min-h-screen flex items-center relative overflow-hidden">
  <div class="absolute inset-0 bg-vintage-photo"></div>
  
  <div class="container-11b relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="text-readable">
        <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight text-dark-olive">
          Adapt and
          <span class="text-olive">Overcome</span>
        </h1>
        
        <p class="text-xl lg:text-2xl mb-8 text-medium-gray">
          We left the Army but kept the mission-first mentality. Now we build 
          <span class="text-olive font-semibold">simple clean tools that simplify our missions</span> 
          (unlike most of Silicon Valley).
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to "Check Out Our Products", projects_path, class: "btn-military text-center" %>
          <%= link_to "Our Unconventional Story", about_path, class: "btn-hippie text-center" %>
        </div>
        
        <!-- Value Proposition -->
        <div class="mt-12 p-6 bg-white bg-opacity-70 rounded-lg border-l-4 border-olive shadow-sm">
          <p class="text-medium-gray mb-3">
            <strong class="text-dark-olive">Why We're Different:</strong> 
            We build products we actually wanted for ourselves. No fluff, no BS, no "revolutionary" to-do lists. 
            Just solid Rails applications that get the job done.
          </p>
        </div>
      </div>
      
      <div class="relative">
        <!-- Veteran Hippie Van Image -->
        <div class="relative image-container">
          <%= image_tag "veteran-hippie-van.png", 
              alt: "Veteran developer working from hippie van - the perfect blend of military precision and creative freedom", 
              class: "w-full h-auto rounded-lg shadow-xl image-blend",
              loading: "lazy" %>
          
          <!-- Overlay text -->
          <div class="absolute bottom-4 left-4 right-4 bg-black bg-opacity-80 text-white rounded-lg p-4 shadow-lg border border-white border-opacity-20">
            <div class="text-sm font-bold mb-2 text-orange-300">üöê Field Office Status:</div>
            <div class="text-sm leading-relaxed">Currently deployed ‚Ä¢ Coding with purpose ‚Ä¢ Peace, love, and clean commits</div>
          </div>
        </div>
        
        <!-- Floating decorative elements -->
        <div class="absolute -top-4 -right-4 w-16 h-16 bg-tie-dye rounded-full opacity-50 animate-pulse"></div>
        <div class="absolute -bottom-6 -left-6 w-12 h-12 bg-olive rounded-full opacity-40 animate-bounce"></div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<% if @featured_projects.present? %>
<section class="py-20 bg-white">
  <div class="container-11b">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-dark-olive mb-6">
        From The Skunk Works
      </h2>
      <p class="text-xl text-medium-gray max-w-3xl mx-auto">
        Three products currently in development. Simple tools for real problems. 
        No AI, no blockchain, no "disruption" - just useful software.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      <% @featured_projects.each do |project| %>
        <div class="card-military group bg-white">
          <div class="aspect-video bg-light-tan mb-4 rounded-lg flex items-center justify-center text-dark-olive">
            <% if project.featured_image.attached? %>
              <%= image_tag project.featured_image, alt: project.title, class: "w-full h-full object-cover rounded-lg" %>
            <% else %>
              <span class="text-2xl font-bold"><%= project.title.first(2).upcase %></span>
            <% end %>
          </div>
          
          <h3 class="text-xl font-bold text-dark-olive mb-3 group-hover:text-olive transition-colors">
            <%= project.title %>
          </h3>
          
          <p class="text-medium-gray mb-4 line-clamp-3">
            <%= truncate(project.description, length: 120) %>
          </p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            <% project.tech_stack.split(',').first(3).each do |tech| %>
              <span class="px-3 py-1 bg-light-tan text-dark-olive text-sm rounded-full border">
                <%= tech.strip %>
              </span>
            <% end %>
          </div>
          
          <%= link_to "Learn More", project_path(project), 
                      class: "text-muted-blue hover:text-olive font-semibold transition-colors" %>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-12">
      <%= link_to "View All Products", projects_path, class: "btn-military" %>
    </div>
  </div>
</section>
<% end %>

