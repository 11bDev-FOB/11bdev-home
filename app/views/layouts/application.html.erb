                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
              </svg>
            </button>
            <%= link_to "Contact", contact_path, class: "btn-military ml-4" %>
          </div>

          <!-- Mobile Navigation -->
          <div class="md:hidden flex items-center space-x-4">
            <button id="dark-mode-toggle-mobile" class="dark-mode-toggle" title="Toggle Dark Mode">
              <svg id="sun-icon-mobile" class="hidden" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
              </svg>
              <svg id="moon-icon-mobile" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
              </svg>
            </button>
            <button id="mobile-menu-button" class="text-white">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-2">
            <%= link_to "Home", root_path, class: "text-white hover:text-tan transition-colors py-2" %>
            <%= link_to "Projects", projects_path, class: "text-white hover:text-tan transition-colors py-2" %>
            <%= link_to "About", about_path, class: "text-white hover:text-tan transition-colors py-2" %>
            <%= link_to "Contact", contact_path, class: "text-white hover:text-tan transition-colors py-2" %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main content with top margin for fixed nav -->
    <main class="flex-grow pt-20">
      <!-- Flash messages -->
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 mx-4" role="alert">
          <span class="block sm:inline"><%= notice %></span>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 mx-4" role="alert">
          <span class="block sm:inline"><%= alert %></span>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark-olive text-white py-12">
      <div class="container-11b">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- About -->
          <div>
            <h3 class="text-xl font-bold mb-4 flex items-center">
              11b Dev 
              <div class="steal-your-face ml-2"></div>
            </h3>
            <p class="text-gray-300">
              Battle-tested code, crafted with soul. From the Infantry to the terminal, 
              we bring discipline and creativity to every line of code.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><%= link_to "Projects", projects_path, class: "text-gray-300 hover:text-tan transition-colors" %></li>
              <li><%= link_to "About", about_path, class: "text-gray-300 hover:text-tan transition-colors" %></li>
              <li><%= link_to "Contact", contact_path, class: "text-gray-300 hover:text-tan transition-colors" %></li>
