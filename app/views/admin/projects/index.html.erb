<!-- Admin Projects Index -->
<section class="py-16 bg-vintage-cream min-h-screen">
  <div class="container-11b max-w-6xl mx-auto">
    <%= render 'admin/nav' %>
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-dark-olive">Manage Projects</h1>
      <%= link_to "New Project", new_admin_project_path, class: "btn-military" %>
    </div>
    
    <div class="mb-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <p class="text-sm text-blue-800">
        <strong>Tip:</strong> Drag and drop rows to reorder projects. The order will be saved automatically.
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="bg-light-tan text-dark-olive border-b">
            <th class="p-4 text-left font-semibold w-12">Order</th>
            <th class="p-4 text-left font-semibold">Title</th>
            <th class="p-4 text-left font-semibold">Status</th>
            <th class="p-4 text-left font-semibold">Updated</th>
            <th class="p-4 text-left font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody id="sortable-projects">
          <% @projects.each do |project| %>
            <tr class="border-b hover:bg-gray-50 draggable-row cursor-move" data-project-id="<%= project.id %>">
              <td class="p-4">
                <div class="flex items-center justify-center text-gray-400">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M7 2a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 2zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 8zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 7 14zm6-8a2 2 0 1 0-.001-4.001A2 2 0 0 0 13 6zm0 2a2 2 0 1 0 .001 4.001A2 2 0 0 0 13 8zm0 6a2 2 0 1 0 .001 4.001A2 2 0 0 0 13 14z"></path>
                  </svg>
                </div>
              </td>
              <td class="p-4">
                <div class="font-semibold"><%= project.title %></div>
                <% if project.open_source %>
                  <span class="inline-block mt-1 px-2 py-0.5 text-xs font-semibold text-white bg-olive rounded">Open Source</span>
                <% end %>
              </td>
              <td class="p-4">
                <% if project.published? %>
                  <span class="inline-block px-3 py-1 text-xs font-semibold text-white bg-olive rounded-full">Published</span>
                <% else %>
                  <span class="inline-block px-3 py-1 text-xs font-semibold text-gray-700 bg-gray-200 rounded-full">Draft</span>
                <% end %>
              </td>
              <td class="p-4 text-sm text-gray-600"><%= project.updated_at.strftime('%b %d, %Y') %></td>
              <td class="p-4">
                <div class="flex gap-2 items-center">
                  <%= link_to "Edit", edit_admin_project_path(project.id), class: "inline-block px-3 py-1 text-sm bg-muted-blue text-white rounded hover:bg-opacity-80 transition" %>
                  <%= button_to "Delete", admin_project_path(project.id), method: :delete, data: { confirm: "Delete this project?" }, class: "inline-block px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-opacity-80 transition" %>
                  <% if project.published? %>
                    <%= button_to "Unpublish", admin_project_path(project.id, project: { published: false }), method: :patch, class: "inline-block px-3 py-1 text-sm bg-gray-500 text-white rounded hover:bg-opacity-80 transition" %>
                  <% else %>
                    <%= button_to "Publish", admin_project_path(project.id, project: { published: true }), method: :patch, class: "inline-block px-3 py-1 text-sm bg-olive text-white rounded hover:bg-opacity-80 transition" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @projects.empty? %>
        <div class="p-8 text-center text-gray-500">
          <p class="mb-4">No projects yet.</p>
          <%= link_to "Create your first project", new_admin_project_path, class: "btn-military" %>
        </div>
      <% end %>
    </div>
    
    <div id="save-indicator" class="hidden fixed bottom-4 right-4 px-4 py-2 rounded-lg shadow-lg">
      <span class="text-white"></span>
    </div>
  </div>
</section>

<!-- Sortable.js Library -->
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sortableList = document.getElementById('sortable-projects');
    
    if (sortableList) {
      new Sortable(sortableList, {
        animation: 150,
        handle: '.draggable-row',
        ghostClass: 'bg-blue-100',
        dragClass: 'opacity-50',
        onEnd: function(evt) {
          saveNewOrder();
        }
      });
    }
    
    function saveNewOrder() {
      const rows = document.querySelectorAll('.draggable-row');
      const order = Array.from(rows).map(row => row.dataset.projectId);
      
      showIndicator('Saving order...', 'bg-blue-500');
      
      fetch('<%= reorder_admin_projects_path %>', {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({ order: order })
      })
      .then(response => {
        if (response.ok) {
          showIndicator('Order saved!', 'bg-green-500');
          setTimeout(hideIndicator, 2000);
        } else {
          showIndicator('Error saving order', 'bg-red-500');
          setTimeout(hideIndicator, 3000);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        showIndicator('Network error', 'bg-red-500');
        setTimeout(hideIndicator, 3000);
      });
    }
    
    function showIndicator(message, bgClass) {
      const indicator = document.getElementById('save-indicator');
      const textEl = indicator.querySelector('span');
      
      indicator.className = 'fixed bottom-4 right-4 px-4 py-2 rounded-lg shadow-lg ' + bgClass;
      textEl.textContent = message;
    }
    
    function hideIndicator() {
      const indicator = document.getElementById('save-indicator');
      indicator.classList.add('hidden');
    }
  });
</script>
