<!-- Admin Posts Index -->
<section class="py-16 bg-vintage-cream min-h-screen">
  <div class="container-11b max-w-6xl mx-auto">
    <%= render 'admin/nav' %>
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-dark-olive">Manage Blog Posts</h1>
      <%= link_to "New Post", new_admin_post_path, class: "btn-military" %>
    </div>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="bg-light-tan text-dark-olive border-b">
            <th class="p-4 text-left font-semibold">Title</th>
            <th class="p-4 text-left font-semibold">Status</th>
            <th class="p-4 text-left font-semibold">Updated</th>
            <th class="p-4 text-left font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="p-4 font-semibold"><%= post.title %></td>
              <td class="p-4">
                <% if post.published? %>
                  <span class="inline-block px-3 py-1 text-xs font-semibold text-white bg-olive rounded-full">Published</span>
                <% else %>
                  <span class="inline-block px-3 py-1 text-xs font-semibold text-gray-700 bg-gray-200 rounded-full">Draft</span>
                <% end %>
              </td>
              <td class="p-4 text-sm text-gray-600"><%= post.updated_at.strftime('%b %d, %Y') %></td>
              <td class="p-4">
                <div class="flex gap-2">
                  <%= link_to "Edit", edit_admin_post_path(post.id), class: "inline-block px-3 py-1 text-sm bg-muted-blue text-white rounded hover:bg-opacity-80 transition" %>
                  <%= button_to "Delete", admin_post_path(post.id), method: :delete, data: { confirm: "Delete this post?" }, class: "inline-block px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-opacity-80 transition" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @posts.empty? %>
        <div class="p-8 text-center text-gray-500">
          <p class="mb-4">No posts yet.</p>
          <%= link_to "Create your first post", new_admin_post_path, class: "btn-military" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
