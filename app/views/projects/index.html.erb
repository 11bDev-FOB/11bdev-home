<!-- Projects Index Page -->
<section class="py-20 bg-vintage-cream">
  <div class="container-11b">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-5xl lg:text-6xl font-bold text-dark-olive mb-6">
        Things We're Building in the Skunk Works
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Here's what we're cooking up in our digital workshop. 
        Real problems, practical solutions, zero startup BS.
      </p>
      <p class="mt-4 text-sm text-gray-500">
        ðŸ“œ Using our free & open source projects? Check out the 
        <%= link_to "Legal Battle Orders", legal_path, class: "text-olive font-semibold hover:underline" %> 
        (aka "terms when you use our stuff, but way more fun to read")
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <% @projects.each do |project| %>
        <div class="bg-white rounded-lg shadow p-8 border-l-4 border-olive/70 hover:shadow-lg transition">
          <div class="flex items-start justify-between mb-2">
            <h2 class="text-2xl font-bold text-dark-olive flex-1">
              <%= project.title %>
            </h2>
            <% if project.open_source %>
              <div class="flex-shrink-0 ml-2" title="Open Source">
                <svg class="w-6 h-6 text-olive" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
            <% end %>
          </div>
          <% if project.featured_image.attached? %>
            <div class="mb-4">
              <%= image_tag project.featured_image, class: "rounded w-full h-auto" %>
            </div>
          <% end %>

          <p class="text-medium-gray mb-4 leading-relaxed">
            <%= project.description %>
          </p>
          
          <div class="text-sm text-olive font-medium mb-2">
            Building with <%= project.tech_stack %>
          </div>
          
          <% if project.open_source %>
            <div class="inline-flex items-center gap-1 text-xs px-2 py-1 rounded mb-2 open-source-badge">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span class="font-semibold">Open Source</span>
            </div>
            <style>
              .open-source-badge {
                color: #4B5E40;
                background-color: rgba(75, 94, 64, 0.1);
              }
              body.dark-mode .open-source-badge,
              html.dark-mode .open-source-badge {
                color: #9db880;
                background-color: rgba(107, 124, 90, 0.2);
              }
            </style>
          <% end %>
          
          <% if project.project_url.present? %>
            <div class="mt-2">
              <%= link_to "Visit #{project.title}", project.project_url,
                    class: "btn-military inline-block",
                    target: "_blank", 
                    rel: "noopener noreferrer" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-20 p-12 bg-light-tan rounded-lg">
      <h3 class="text-3xl font-bold text-dark-olive mb-4">
        Want to Follow Along?
      </h3>
      <p class="text-xl text-gray-700 mb-6">
        These projects are in active development. No launch dates, no false promisesâ€”
        just honest work on useful tools.
      </p>
      <%= link_to "Get In Touch", contact_path, class: "btn-military mr-4" %>
      <%= link_to "Learn About Us", about_path, class: "btn-hippie" %>
    </div>
  </div>
</section>
