<!-- Project Detail Page -->
<section class="py-20 bg-vintage-cream">
  <div class="container-11b">
    <div class="mb-8">
      <%= link_to "← Back to Products", projects_path, class: "text-muted-blue hover:text-olive font-semibold" %>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Visual -->
      <div>
        <div class="aspect-video bg-light-tan rounded-lg flex items-center justify-center overflow-hidden">
          <% if @project.featured_image.attached? %>
            <%= image_tag @project.featured_image, alt: @project.title, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="text-5xl font-bold text-dark-olive">
              <%= @project.title.first(2).upcase %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Content -->
      <div>
        <h1 class="text-5xl font-bold text-dark-olive mb-4"><%= @project.title %></h1>
        
        <% if @project.tech_stack.present? %>
          <div class="flex flex-wrap gap-2 mb-6">
            <% @project.tech_stack.split(',').each do |tech| %>
              <span class="px-3 py-1 bg-light-tan text-dark-olive text-sm rounded-full border">
                <%= tech.strip %>
              </span>
            <% end %>
          </div>
        <% end %>

        <style>
          .prose-project p { 
            font-size: 1.125rem;
            line-height: 1.75;
            color: #2d3d24;
            margin-bottom: 1rem;
          }
          
          .prose-project a {
            color: #4682B4;
            text-decoration: underline;
            font-weight: 500;
          }
          
          .prose-project a:hover {
            color: #4B5E40;
          }
          
          .prose-project strong { 
            font-weight: 600;
            color: #3A4A32;
          }
          
          .prose-project ul, .prose-project ol {
            margin-left: 1.5rem;
            margin-bottom: 1rem;
          }
          
          .prose-project li {
            margin-bottom: 0.5rem;
          }
          
          /* Dark mode styles */
          body.dark-mode .prose-project p,
          html.dark-mode .prose-project p {
            color: #d1d5db !important;
          }
          
          body.dark-mode .prose-project a,
          html.dark-mode .prose-project a {
            color: #93c5fd !important;
          }
          
          body.dark-mode .prose-project a:hover,
          html.dark-mode .prose-project a:hover {
            color: #b8d49f !important;
          }
          
          body.dark-mode .prose-project strong,
          html.dark-mode .prose-project strong {
            color: #b8d49f !important;
          }
        </style>

        <div class="prose-project max-w-none mb-6">
          <%= raw @project.description_html %>
        </div>

        <% if @project.client_outcome.present? %>
          <div class="p-4 bg-light-tan rounded-lg border mb-6">
            <h2 class="text-lg font-semibold text-dark-olive mb-2">Outcome</h2>
            <p class="text-medium-gray"><%= @project.client_outcome %></p>
          </div>
        <% end %>

        <div class="flex gap-3">
          <% if @project.project_url.present? %>
            <%= link_to "Visit #{@project.title}", @project.project_url, class: "btn-military", target: "_blank", rel: "noopener noreferrer" %>
          <% end %>
          <%= link_to "Back", projects_path, class: "btn-hippie" %>
        </div>
      </div>
    </div>
  </div>
</section>
